generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model News {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  title          String?
  date           String?
  contentSnippet String
  source         String
  link           String
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  username String
  password String
}
